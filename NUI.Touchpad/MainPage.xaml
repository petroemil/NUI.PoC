<Page
    x:Class="NUI.Touchpad.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Canvas Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Canvas x:Name="VirtualCursor" Canvas.Left="250" Canvas.Top="250">

            <Ellipse x:Name="LeftFinger" Fill="Black" Width="100" Height="100" Canvas.Left="-50" />
            <Ellipse x:Name="RightFinger" Fill="Black" Width="100" Height="100" Canvas.Left="50" />
            <Rectangle Fill="Gray" Width="100" Height="100" />

        </Canvas>

    </Canvas>
</Page>
