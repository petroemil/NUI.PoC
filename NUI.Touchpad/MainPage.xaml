<Page
    x:Class="NUI.Touchpad.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Canvas Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <StackPanel x:Name="VirtualCursor" Canvas.Left="250" Canvas.Top="250" Orientation="Horizontal">
            <Ellipse x:Name="LeftFinger" Fill="Black" Width="25" Height="25" Margin="10" />
            <Ellipse Fill="Gray" Width="25" Height="25" Margin="10" />
            <Ellipse x:Name="RightFinger" Fill="Black" Width="25" Height="25" Margin="10" />
        </StackPanel>

    </Canvas>
</Page>
